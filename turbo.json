{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_*", "SKIP_ENV_VALIDATION"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["lint_output.txt"]
    },
    "check": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "typecheck": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["tsconfig.tsbuildinfo"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
       "outputs": ["coverage/**"]
    },
    "format": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    }
  }
}
